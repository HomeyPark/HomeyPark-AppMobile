<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:padding="15dip"
            android:text="Historial de reservas"
            android:textColor="#3C4E67"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Reservas:"
            android:textColor="#3C4E67"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:background="@drawable/border2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="168dp"
                android:layout_height="108dp"
                android:padding="10dip"
                app:srcCompat="@drawable/cochera1" />

            <TextView
                android:id="@+id/cochera1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/image1"
                android:gravity="center"
                android:padding="10dip"
                android:text="Cochera de Juan"
                android:textColor="#3C4E67"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:layout_below="@+id/cochera1"
                android:layout_toEndOf="@+id/image1"
                android:text="Cancelar reserva"
                android:textSize="16sp"
                app:backgroundTint="#6CD391"
                app:cornerRadius="5dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="Reservas pasadas:"
            android:textColor="#3C4E67"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:background="@drawable/border2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="108dp"
                android:padding="10dip"
                app:srcCompat="@drawable/cochera2" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dip"
                android:text="Cochera de Mario"
                android:textColor="#3C4E67"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:background="@drawable/border2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="108dp"
                android:padding="10dip"
                app:srcCompat="@drawable/cochera3" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dip"
                android:text="Cochera de Jorge"
                android:textColor="#3C4E67"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:background="@drawable/border2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="108dp"
                android:padding="10dip"
                app:srcCompat="@drawable/cochera4" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dip"
                android:text="Cochera de David"
                android:textColor="#3C4E67"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>